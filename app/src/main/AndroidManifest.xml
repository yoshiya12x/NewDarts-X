<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="e.yoppie.newdartsx">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
            android:allowBackup="true"
            android:icon="@drawable/dartsx"
            android:label="@string/app_name"
            android:roundIcon="@drawable/dartsx"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".view.activity.ResultActivity">
        </activity>
        <activity android:name=".view.activity.SelectWordActivity">
        </activity>
        <activity android:name=".view.activity.SettingActivity">
        </activity>
        <activity android:name=".view.activity.TargetActivity">
        </activity>
        <activity android:name=".view.activity.ExplainActivity">
        </activity>
        <activity android:name=".view.activity.DoubleOutActivity">
        </activity>
        <activity android:name=".view.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service android:name=".service.BgmService"/>
    </application>

</manifest>